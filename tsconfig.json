{
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "lib": [
      "es5"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": true
  }
}
